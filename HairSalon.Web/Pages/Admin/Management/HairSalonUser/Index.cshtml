@page
@model HairSalon.Web.Pages.Admin.HairSalonUser.IndexModel

@{
    ViewData["Title"] = "User";
}

<h1>User</h1>

<p>
    <a asp-page="./CreateAndEdit">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HairSalonUserDetails[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HairSalonUserDetails[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HairSalonUserDetails[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.HairSalonUserDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-page="./CreateAndEdit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
