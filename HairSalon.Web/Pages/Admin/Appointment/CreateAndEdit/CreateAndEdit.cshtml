@page 
@model HairSalon.Web.Pages.Admin.Appointment.CreateAndEdit.EditModel

@{
    ViewData["Title"] = "Appointment create and edit";
}

<h1>Appointment</h1>

<h4>Create and edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InputModel.AppointmentDetails.Id" />
            <div class="form-group">
                <label asp-for="InputModel.AppointmentDetails.Title" class="control-label"></label>
                <input asp-for="InputModel.AppointmentDetails.Title" class="form-control" />
                <span asp-validation-for="InputModel.AppointmentDetails.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.AppointmentDetails.DutyTimeId" class="control-label"></label>
                <select asp-for="InputModel.AppointmentDetails.DutyTimeId" asp-items="Model.DutyTimeListItems" class="form-control">
                    <option>"..."</option>
                </select>
                <span asp-validation-for="InputModel.AppointmentDetails.DutyTimeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.AppointmentDetails.Description" class="control-label"></label>
                <input asp-for="InputModel.AppointmentDetails.Description" class="form-control" />
                <span asp-validation-for="InputModel.AppointmentDetails.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.AppointmentDetails.TimeStart" class="control-label"></label>
                <select asp-for="InputModel.AppointmentDetails.TimeStart" asp-items="Model.DutyTimeListItems" class="form-control">
                    <option>"..."</option>
                </select>
                <span asp-validation-for="InputModel.AppointmentDetails.TimeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputModel.AppointmentDetails.HairSalonUserId" class="control-label"></label>
                <input asp-for="InputModel.AppointmentDetails.HairSalonUserId" class="form-control" />
                <span asp-validation-for="InputModel.AppointmentDetails.HairSalonUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
